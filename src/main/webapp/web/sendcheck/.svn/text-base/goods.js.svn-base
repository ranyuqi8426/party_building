Ext.onReady(function() {
	var addOrUpdate = 0;// 定义新增还是修改的标示

	Ext.define('PointGoods', {
		extend : 'Ext.data.Model',
		fields : [ {
			name : 'goods_id',
			type : 'string'
		}, {
			name : 'goods_name',
			type : 'string'
		}, {
			name : 'goods_points',
			type : 'string'
		}, {
			name : 'goods_desc',
			type : 'string'
		}, {
			name : 'goods_url',
			type : 'string'
		} ]
	});

	var goodsStore = Ext.create('Ext.data.Store', {
		model : 'PointGoods',
		pageSize : pagelimit,
		proxy : {
			type : 'ajax',
			url : basePath + '/point/goods/search.do',
			actionMethods : {
				read : "POST"
			},
			reader : {
				rootProperty : 'root'
			}
		},
		autoLoad : false,
		listeners : {
			beforeload : function(store) {
				Ext.apply(store.proxy.extraParams, {
					goods_name : Ext.getCmp('txtGoods_name').getValue()
				});
			}
		}
	});

	var selGoodsModel = Ext.create('Ext.selection.CheckboxModel', {
		mode : 'SINGLE'
	});

	var goodsTb = Ext.create('Ext.toolbar.Toolbar', {
		layout : {
			overflowHandler : 'Menu'
		},
		items : [ {
			text : '新增',
			glyph : glyphAdd,
			handler : addGoods
		}, '商品名称', {
			xtype : 'textfield',
			width : 180,
			id : 'txtGoods_name'
		}, {
			xtype : 'button',
			glyph : glyphSearch,
			text : '查询',
			handler : function() {
				searchGoods();
			}
		}, {
			xtype : 'button',
			glyph : glyphClear,
			text : '清空',
			handler : function() {
				clearGoods();
			}
		} ]
	});

	var goodsGrid = Ext.create('Ext.grid.Panel', {
		title : '积分商品表列表',
		frame : true,
		glyph : glyphGrid,
		width : '100%',
		height : pageH,
		collapsible : true,// 表头缩回按钮
		store : goodsStore,
		selModel : selGoodsModel,
		renderTo : Ext.getBody(),
		columns : [ {
			xtype : 'rownumberer',
			width : 40
		}, {
			text : '商品名称',
			dataIndex : 'goods_name',
			width : 180,
			align : 'center',
			sortable : false
		}, {
			text : '商品兑换积分',
			dataIndex : 'goods_points',
			width : 100,
			align : 'center',
			sortable : false
		}, {
			xtype : 'actioncolumn',
			text : '操作',
			width : 120,
			align : 'center',
			items : [ {
				text : '修改',
				handler : function(grid, rowIndex, colIndex) {
					setGridSelect(grid, rowIndex);
					updateGoods(grid.getStore().getAt(rowIndex));
				}
			}, {
				text : '删除',
				handler : function(grid, rowIndex, colIndex) {
					setGridSelect(grid, rowIndex);
					deleteGoods(grid.getStore().getAt(rowIndex))
				}
			}]
		} ],
		viewConfig : {
			stripeRows : true,
			enableTextSelection : true
		},
		tbar : goodsTb,
		bbar : Ext.create('Ext.PagingToolbar', {
			store : goodsStore,
			displayInfo : true
		})
	});
	var goodsForm = new Ext.create("Ext.form.Panel", {
		id : 'goodsForm',
		frame : true,
		border : true,
		width : '100%',
		height : 420,
		bodyPadding : 4,
		layout : 'column',
		buttonAlign : 'center',
		defaultType : 'textfield',
		waitTitle : '正在提交中',
		fieldDefaults : {
			labelAlign : 'right',
			labelWidth : 120,
			anchor : '100%',
			margin : '0 0 5 0',
			msgTarget : 'qtip',
			columnWidth : 1
		},
		items : [ {
			name : 'goods_id',
			hidden : true
		},{
			fieldLabel : '商品名称',
			xtype : 'textfield',
			width : 100,
			name : 'goods_name',
			maxLength : 100
		}, {
			fieldLabel : '商品兑换积分',
			xtype : 'textfield',
			width : 100,
			name : 'goods_points',
			maxLength : 10,
			vtype:'intNumber',
		}, {
			fieldLabel : '商品描述',
			xtype : 'textarea',
			width : 100,
			height:240,
			name : 'goods_desc',
			maxLength : 400
		}],
		buttons : [ {
			text : '保存',
			glyph : glyphSave,
			handler : saveGoods
		}, {
			text : '返回',
			glyph : glyphBack,
			handler : function() {
				goodsWin.hide();
			}
		} ]
	});

	var goodsWin = new Ext.Window({
		width : 800,
		height : 460,
		glyph : glyphWindow,
		title : '新增/修改',
		modal : true,
		closeAction : 'hide',
		padding : 4,
		items : [ goodsForm ]
	});

	var goodsViewForm = new Ext.create("Ext.form.Panel", {
		id : 'goodsViewForm',
		width : '100%',
		height : 420,
		bodyPadding : 4,
		layout : 'column',
		defaultType : 'textfield',
		buttonAlign : 'center',
		fieldDefaults : {
			labelAlign : 'right',
			labelWidth : 90,
			anchor : '100%',
			margin : '0 0 5 0',
			msgTarget : 'qtip',
			columnWidth : 1
		},
		items : [{
			fieldLabel : '商品名称',
			xtype : 'textfield',
			width : 100,
			name : 'goods_name',
			maxLength : 100
		}, {
			fieldLabel : '商品兑换积分',
			xtype : 'textfield',
			width : 100,
			name : 'goods_points',
			maxLength : 10
		}, {
			fieldLabel : '商品描述',
			xtype : 'textfield',
			width : 100,
			name : 'goods_desc',
			maxLength : 400
		}],
		buttons : [ {
			text : '返回',
			glyph : glyphBack,
			handler : function() {
				goodsViewWin.hide();
			}
		} ]
	});
	var goodsViewWin = new Ext.Window({
		width : 800,
		height : 460,
		glyph : glyphWindow,
		title : '『查看积分商品表』',
		modal : true,
		closeAction : 'hide',
		padding : 4,
		items : [ goodsViewForm ]
	});

	//searchGoods();
	// 查询
	function searchGoods() {
		goodsStore.loadPage(1);
	}
	// 选择性条件清空
	function clearGoods() {
		Ext.getCmp('txtGoods_name').setValue('');
	}

	// 新增
	function addGoods() {
		goodsForm.getForm().reset();
		goodsForm.getForm().findField("goods_id").setValue("0");
		goodsWin.setTitle("『新增积分商品表』");
		goodsWin.show();
		addOrUpdate = 1;
	}

	// 修改
	function updateGoods(record) {
		goodsForm.getForm().loadRecord(record);
		goodsWin.setTitle("『修改积分商品表』");
		goodsWin.show();
		addOrUpdate = 2;
	}

	// 保存
	function saveGoods() {
		var url = "";
		if (addOrUpdate == 1)
			url = basePath + '/point/goods/add.do';
		else if (addOrUpdate == 2)
			url = basePath + '/point/goods/update.do';
		if (goodsForm.getForm().isValid()) {
			goodsForm.getForm().submit({
				clientValidation : true,
				url : url,
				success : function(form, action) {
					goodsWin.hide();
					goodsStore.reload();
				},
				failure : function(form, action) {
					Ext.Msg.alert('操作提示', action.result.msgText)
				}
			});
		}
	}

	// 删除
	function deleteGoods(record) {
		Ext.Msg.confirm('确认删除', '你确定删除该条记录?', function(btn) {
			if (btn == 'yes') {
				showMask();
				Ext.Ajax.request({
					url : basePath + '/point/goods/delete.do',
					params : {
						goods_id : record.data.goods_id
					},
					success : function(response) {
						unMask();
						var result = Ext.decode(response.responseText);
						if (result.success) {
							Ext.Msg.alert('操作提示', '删除成功', function() {
								goodsStore.reload();
							});
						} else {
							Ext.Msg.alert('操作提示', result.msgText);
						}
					}
				});
			}
		});
	}

	// 查看
	function viewGoods(record) {
		goodsViewForm.getForm().loadRecord(record);
		setFormReadOnly(goodsViewForm, true);
		goodsViewWin.show();
	}

	// 自适应大小
	Ext.GlobalEvents.on('resize', function() {
		goodsGrid.getView().refresh();
		goodsGrid.setWidth('100%')
	})
});